<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EJERCICIOSMENU.SuperficieDtriangulo"
             Title="SuperficieDtriangulo">

    <ScrollView>
        <VerticalStackLayout
        Padding="10,0"
        Spacing="25">

            <StackLayout Padding="100,20,100,0">
                <Image Source="area.png" WidthRequest="200" HeightRequest="200"/>
            </StackLayout>

            <Label
            Text="Calcular superficie de un triangulo"
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1" />

            <Entry x:Name="entrib" Placeholder="Escriba la base del triangulo" TextColor="Black"
                WidthRequest="450" />
            <Entry x:Name="entria" Placeholder="Escriba la atura del triangulo" TextColor="Black"
               WidthRequest="450"/>
            <Button
            Text="Calcular superficie"
            Clicked="Button_Clicked"
            WidthRequest="450"/>
            <Entry x:Name="entrip" Placeholder="---" TextColor="Black"
               WidthRequest="450"/>

        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>