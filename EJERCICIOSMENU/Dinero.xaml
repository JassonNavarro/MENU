<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EJERCICIOSMENU.Dinero"
             Title="Dinero"
             BackgroundColor="DarkOliveGreen">
    <StackLayout Padding="30">

        <Label Text="Cambio cliente"
           FontSize="24"
           HorizontalOptions="Center"
           Margin="0,0,0,20" />

        <Image Source="dotnet_bot.png"


           HeightRequest="200"
           WidthRequest="200"/>




        <Entry x:Name="costEntry"
           Placeholder="Ingrese el costo del artÃ­culo"
           Keyboard="Numeric"
           Margin="0,0,0,10" />

        <Entry x:Name="moneyGivenEntry"
           Placeholder="Ingrese el dinero entregado"
           Keyboard="Numeric"
           Margin="0,0,0,20" />

        <Button Text="Calcular Cambio"
            Clicked="Button_Clicked"
            Margin="0,0,0,20" 
            BackgroundColor="White"/>

        <Label x:Name="resultLabel"
           Text="El cambio es: "
           FontSize="20"
           HorizontalOptions="Center" />

    </StackLayout>

</ContentPage>